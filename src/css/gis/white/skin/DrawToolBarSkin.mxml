<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009"
		xmlns:s="library://ns.adobe.com/flex/spark"
		xmlns:mx="library://ns.adobe.com/flex/mx">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.linkage.gis.tools.DrawToolBar")]
	</fx:Metadata>

	<!-- states -->
	<s:states>
		<s:State name="disabled"/>
		<s:State name="normal"/>
	</s:states>

	<s:Rect top="0"
			left="0"
			bottom="0"
			right="0"
			topLeftRadiusX="10"
			topRightRadiusX="10">
		<s:fill>
			<s:LinearGradient rotation="90">
				<s:GradientEntry color="0xb4b6b5"
								 alpha="0.8"/>
				<s:GradientEntry color="0xb4b6b5"
								 alpha="0.8"/>
			</s:LinearGradient>
		</s:fill>
	</s:Rect>
	<s:Rect top="1"
			left="1"
			bottom="0"
			right="1"
			topLeftRadiusX="10"
			topRightRadiusX="10">
		<s:stroke>
			<s:SolidColorStroke color="0xffffff"
								alpha="0.8"/>
		</s:stroke>
	</s:Rect>

	<s:HGroup horizontalAlign="center"
			  gap="2"
			  bottom="2"
			  left="20"
			  right="20"
			  top="2">
		<s:Button id="pan"
				  toolTip="拖动"
				  label="拖动"
				  skinClass="com.linkage.gis.tools.skins.white.skin.DrawPanBtnSkin"
				  buttonMode="true"/>
		<s:Button id="zoom"
				  toolTip="缩放"
				  label="缩放"
				  skinClass="com.linkage.gis.tools.skins.white.skin.DrawZoomBtnSkin"
				  buttonMode="true"/>
		<s:Button id="drawFreePolygon"
				  label="不规则框选"
				  toolTip="不规则框选"
				  skinClass="com.linkage.gis.tools.skins.white.skin.DrawFreePolygonBtnSkin"
				  buttonMode="true"/>
		<s:Button id="drawRectangle"
				  toolTip="矩形框选"
				  label="矩形框选"
				  skinClass="com.linkage.gis.tools.skins.white.skin.DrawRectangleBtnSkin"
				  buttonMode="true"/>
		<s:Button id="drawCircle"
				  toolTip="圆形框选"
				  label="圆形框选"
				  skinClass="com.linkage.gis.tools.skins.white.skin.DrawCircleBtnSkin"
				  buttonMode="true"/>
		<s:Button id="drawPolygon"
				  toolTip="多边形框选"
				  label="多边形框选"
				  skinClass="com.linkage.gis.tools.skins.white.skin.DrawPolygonBtnSkin"
				  buttonMode="true"/>
		<s:Button id="drawRegulPolyon"
				  toolTip="正多边形框选"
				  label="正多边形框选"
				  skinClass="com.linkage.gis.tools.skins.white.skin.DrawPolygonBtnSkin"
				  buttonMode="true"/>
		<s:Button id="back"
				  toolTip="后退"
				  label="后退"
				  skinClass="com.linkage.gis.tools.skins.white.skin.BackBtnSkin"
				  buttonMode="true"/>
		<s:Button id="forward"
				  toolTip="前进"
				  label="前进"
				  skinClass="com.linkage.gis.tools.skins.white.skin.ForwardBtnSkin"
				  buttonMode="true"/>
	</s:HGroup>


	<!-- SkinParts
		 name=drawRectangle, type=spark.components.Button, required=false
		 name=drawFreePolygon, type=spark.components.Button, required=false
		 name=drawCircle, type=spark.components.Button, required=false
		 name=drawPolygon, type=spark.components.Button, required=false
		 name=pan, type=spark.components.Button, required=false
		 name=zoom, type=spark.components.Button, required=false
		 name=contentGroup, type=spark.components.Group, required=false
	-->
</s:Skin>
