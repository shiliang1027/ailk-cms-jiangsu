<!--- The Spark skin class for the header background of the MX DataGrid component. 

@see mx.controls.DataGrid

@langversion 3.0
@playerversion Flash 10
@playerversion AIR 1.5
@productversion Flex 4
-->
<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" 
			 minWidth="21" minHeight="26">
	
	<fx:Script>
		/**
		 * @private
		 */
		override protected function initializationComplete():void
		{
			useChromeColor = true;
			super.initializationComplete();
		}
	</fx:Script>
	
	<s:BitmapImage smooth="true" source="@Embed(source='../../assets/scene/表格标题-重复.png')" fillMode="repeat" left="0" right="0" top="0" bottom="1"/>
	<s:Line left="-1" right="-1" bottom="0">
		<s:stroke>
			<s:SolidColorStroke weight="1" 
								color="0x87cfff"
								alpha="1"/>
		</s:stroke>
	</s:Line>
</s:SparkSkin>
