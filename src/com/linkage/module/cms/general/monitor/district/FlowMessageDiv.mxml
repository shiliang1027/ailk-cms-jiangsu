<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" alpha="1">
	
	<s:layout>
		<s:BasicLayout/>
	</s:layout>
	<fx:Declarations>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
	</fx:Declarations>
	<fx:Script>
		<![CDATA[
			
			public function setMsg(msg:String):void
			{
				label.text = msg;
			}

		]]>
	</fx:Script>
	<s:BorderContainer styleName="panelStyle" cornerRadius="6">
		<s:Label id="label" left="15" top="13" right="10" bottom="10"/>
	</s:BorderContainer>
</s:Group>
