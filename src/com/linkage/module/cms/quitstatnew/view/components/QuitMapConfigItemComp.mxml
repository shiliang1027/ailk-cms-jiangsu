	<fx:Script>
		<![CDATA[
			[Bindable]
			public var data:Object;
		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
	</fx:Declarations>
	
	<s:Rect width="18"
			height="18">
		<s:fill>
			<s:SolidColor color="{uint('0x'+data.color)}"/>
		</s:fill>
	</s:Rect>
	<s:Label text="{data.label}"
			 color="{uint('0x'+data.color)}"/>
</s:HGroup>
