<?xml version="1.0" encoding="utf-8"?>
<s:MXAdvancedDataGridItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
								  xmlns:s="library://ns.adobe.com/flex/spark" 
								  xmlns:mx="library://ns.adobe.com/flex/mx" 
								  focusEnabled="true">
	<fx:Script>
		<![CDATA[
			import com.linkage.module.cms.groupclientalarm.Config;
		]]>
	</fx:Script>
	<s:SkinnableContainer top="0" left="0" right="0" bottom="0" backgroundAlpha="{Number(data.warnSeverity)>0?1:0}" backgroundColor="{Number(data.warnSeverity)>0?Config.alarmColorConfig['1']:0xffffff}">
		<s:layout>
			<s:HorizontalLayout horizontalAlign="center" verticalAlign="middle"/>
		</s:layout>
		<s:Label id="lblData" text="{listData.label}"/>
	</s:SkinnableContainer>
</s:MXAdvancedDataGridItemRenderer>
